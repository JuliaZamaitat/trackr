{
  "compilerOptions": {
    "paths": {
      "@/*": [
       "./*"
      ]
     },
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    //"allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env", "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
, "src/store/index.js", "src/store/modules/fileversions.ts"  ],
  "exclude": [
    "node_modules",
  ]
}
